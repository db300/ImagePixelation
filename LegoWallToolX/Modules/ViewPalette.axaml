<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LegoWallToolX.ViewPalette">
  <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto">
    <TextBlock Text="显示行/列号：" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
    <CheckBox x:Name="_ckbRowColNumVisible" Grid.Row="0" Grid.Column="1" IsChecked="True"/>
    <TextBlock Text="单元格尺寸：" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
    <TextBox x:Name="_txtPixelPerRect" Text="15" Grid.Row="1" Grid.Column="1"/>
  </Grid>
</UserControl>
